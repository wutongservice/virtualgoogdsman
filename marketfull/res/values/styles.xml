<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
     <!-- icon style -->
    <style name="base_icon_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">?attr/buttonSelectableBackground</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="title_bar_icon" parent="@style/base_icon_style">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">@dimen/default_text_padding_left</item>
        <item name="android:paddingRight">@dimen/default_text_padding_right</item>
    </style>
    
     <style name="list_item_icon" parent="@style/base_icon_style">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingLeft">@dimen/default_text_padding_left</item>
        <item name="android:paddingRight">@dimen/default_text_padding_right</item>
    </style>
    
    <style name="actionBar_titleTest" >
     	<item name="android:textColor">@color/actionbar_title_text</item>
     	<item name="android:textSize">15dip</item>
    </style>
    
    <style name="Spinner">
        <item name="android:indeterminate">true</item>
        <item name="android:indeterminateDrawable">@drawable/spinner</item>
        <item name="android:indeterminateDuration">2000</item>
        <item name="android:indeterminateOnly">true</item>
    </style>
    
    <style name="ListSpinner" parent="Spinner">
        <item name="android:layout_width">58dp</item>
        <item name="android:layout_height">58dp</item>
    </style>
    
    <style name="Widget.Sherlock.ActionBar.Custom" parent="android:Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/actionBar_titleTest</item>
        <item name="android:background">@drawable/bg_ab</item>
        <item name="android:progressBarPadding">32dip</item>
        <item name="android:itemPadding">8dip</item>
    </style>
    
    <style name="Widget.Sherlock.ActionBar.TabView.Custom" parent="android:Widget.Holo.ActionBar.TabView">
     	<item name="android:background">@color/white</item>
    </style>
    
    <style name="product_decription_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14dip</item>
        <item name="android:layout_marginLeft">5dip</item>
    </style>
    <style name="product_decription_style_grey">
        <item name="android:textColor">#979797</item>
        <item name="android:textSize">14dip</item>
    </style>
</resources>